<style>
  .search-btn {
    background-color: #fe424d;
    color: #fef8f8;
    border-radius: 25px;
    padding: 0 1rem;
    font-size: 0.9rem;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }
  .search-btn:hover {
    background-color: #e63b44;
    color: #fff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
    font-size: 1rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 0.9rem;
    width: 100%;
    max-width: 300px;
  }
  @media (max-width: 768px) {
    .search-btn {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }
    .search-btn i {
      margin-right: 0.4rem;
      font-size: 0.9rem;
    }
    .search-inp {
      padding: 0.4rem 2rem;
      font-size: 0.8rem;
      max-width: 250px;
    }
  }
  @media (max-width: 480px) {
    .search-btn {
      padding: 0.3rem 0.6rem;
      font-size: 0.75rem;
    }
    .search-btn i {
      font-size: 0.8rem;
    }
    .search-inp {
      padding: 0.4rem 1rem;
      font-size: 0.75rem;
      max-width: 100%;
    }
  }
</style>

