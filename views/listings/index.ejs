<% layout("/layouts/boilerplate") %>
<style>
#filters-wrapper {
  display: flex;
  align-items: center;
  position: relative;
  padding: 2rem 0;
  gap: 0.5rem;
}

#filters {
  display: flex;
  gap: 1rem;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  flex-grow: 1;
  scroll-behavior: smooth;
}

#filters::-webkit-scrollbar {
  display: none;
}

.filter {
  text-align: center;
  opacity: 0.7;
  transition: opacity 0.3s ease;
  flex: 0 0 auto;
  min-width: 70px;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter div {
  font-size: 1.5rem;
}

.filter p {
  font-size: 0.85rem;
  margin: 0.3rem 0 0;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  margin-left: 4rem;
  white-space: nowrap;
  flex-shrink: 0;
}

/* Arrow buttons */
.scroll-btn {
  background: white;
  border: 1px solid #ccc;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  font-size: 1.2rem;
  cursor: pointer;
  user-select: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s ease;
}

.scroll-btn:hover {
  background: #f0f0f0;
}
.oval-box {
  background-color: #f7f3f3; /* or any light color */
  border-radius: 2rem;
  padding: 0.5rem 1rem;
  flex-grow: 1;
  overflow: hidden;
  display: flex;
  align-items: center;
}

@media (max-width: 768px) {
  #filters-wrapper {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }

  .oval-box {
    overflow-x: auto;
    flex-direction: row;
    justify-content: flex-start;
    padding: 0.5rem;
  }

  #filters {
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
  }

  .scroll-btn {
    display: none;
  }

  .tax-toggle {
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
      margin-left: 0;
      display: flex;
      align-items: center;
      justify-content: center; 
      gap: 0.5rem;
      width: 100%; 
    }

  .filter {
    min-width: 60px;
  }

  .filter div {
    font-size: 1.2rem;
  }

  .filter p {
    font-size: 0.75rem;
  }
}

</style>


