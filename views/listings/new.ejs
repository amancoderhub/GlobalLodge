<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New Listing</h3>
        <form method="post"
            action="/listings"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" id="title" placeholder="Add a catchy title"
                    type="text" class="form-control" required />
                <div class="valid-feedback">Title looks good!</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" placeholder="Enter description"
                        class="form-control" required></textarea>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input name="listing[image]" id="image" type="file" accept="image/*" class="form-control" required />
                required
            </div>

            <!-- Price & Country -->
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" id="price" placeholder="1200" type="number"
                        class="form-control" required />
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" id="country" placeholder="India"
                        type="text" class="form-control" required />
                </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" id="location" placeholder="Ghaziabad, Uttar Pradesh"
                    type="text" class="form-control" required />
            </div>

            <br><br>

            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
</div>
